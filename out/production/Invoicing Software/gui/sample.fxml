<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="768.0" prefWidth="1024.0" GridPane.columnIndex="1">
         <children>
            <TabPane layoutY="100.0" prefHeight="668.0" prefWidth="1024.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Dashboard">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </content>
                </Tab>
                <Tab text="Customers">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="tableCustomers" layoutX="14.0" layoutY="64.0" prefHeight="560.0" prefWidth="994.0">
                                <columns>
                                  <TableColumn prefWidth="175.0" text="Name" />
                                    <TableColumn minWidth="0.0" prefWidth="195.0" text="Company Name" />
                                    <TableColumn minWidth="0.0" prefWidth="160.0" text="Email" />
                                    <TableColumn prefWidth="193.0" text="Work Phone" />
                                    <TableColumn prefWidth="135.0" text="Receivables" />
                                    <TableColumn prefWidth="135.0" text="Unused Credits" />
                                </columns>
                              </TableView>
                              <Button fx:id="buttonNewCustomer" layoutX="913.0" layoutY="22.0" mnemonicParsing="false" text="New Customer" />
                              <Label layoutX="14.0" layoutY="17.0" text="Customers">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children></AnchorPane>
                  </content>
                </Tab>
                  <Tab text="Items List">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="tableItems" layoutX="14.0" layoutY="64.0" prefHeight="560.0" prefWidth="994.0">
                                 <columns>
                                    <TableColumn prefWidth="324.0" text="Name" />
                                    <TableColumn minWidth="0.0" prefWidth="397.0" text="Description" />
                                    <TableColumn minWidth="0.0" prefWidth="272.0" text="Price" />
                                 </columns>
                              </TableView>
                              <Label layoutX="14.0" layoutY="17.0" text="Items List">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <Button fx:id="buttonNewItem" layoutX="940.0" layoutY="22.0" mnemonicParsing="false" text="New Item" />
                           </children></AnchorPane>
                    </content>
                  </Tab>
                  <Tab text="Invoices">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="tableInvoices" layoutX="14.0" layoutY="64.0" prefHeight="560.0" prefWidth="994.0">
                                 <columns>
                                    <TableColumn prefWidth="100.0" text="Date" />
                                    <TableColumn minWidth="0.0" prefWidth="125.0" text="Invoice No." />
                                    <TableColumn minWidth="0.0" prefWidth="225.0" text="Customer Name" />
                                    <TableColumn prefWidth="100.0" text="Status" />
                                    <TableColumn prefWidth="100.0" text="Due Date" />
                                    <TableColumn prefWidth="200.0" text="Amount" />
                                    <TableColumn prefWidth="144.0" text="Balance Due" />
                                 </columns>
                              </TableView>
                              <Label layoutX="14.0" layoutY="17.0" text="Invoices">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <Button fx:id="buttonNewItem" layoutX="927.0" layoutY="17.0" mnemonicParsing="false" text="New Invoice" />
                           </children></AnchorPane>
                    </content>
                  </Tab>
                  <Tab text="Payments Received">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
                  <Tab text="Expenses">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
      </Pane>
   </children>
</GridPane>
